<!DOCTYPE html>
<html>
  <head>
    <title>Pairbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- START NAV BAR -->
  <nav>

    <div id="logo">
      <%= link_to "PairBnB", root_path, :class => "nav-link" %>
    </div>

    <div id="navbar-controls">
      <% if signed_in? %>

        <%if (current_user.avatar == nil)%>
          <%= link_to image_tag("question-mark.jpg", class: "navbar-avatar"), user_path(current_user.id) %>&nbsp;
        <% else %>
          <%= link_to image_tag(current_user.avatar.avatar_image.navbar_size.url, class: "navbar-avatar"), user_path(current_user.id) %>&nbsp;
        <% end %>

        <%= link_to User::SYMBOLS[:logout], sign_out_path, method: :delete %>
      <% else %>
        <%= link_to User::SYMBOLS[:login], sign_in_path, :class => "nav-link" %>
      <% end %>
    </div>

  </nav>

  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
  <!-- END NAV BAR -->


    <%= yield %>
  </body>
</html>
