<%if listings.length > 0 %>
	<%listings.order(rating: :desc).each do |listing| %>
		<div class="profile-listing-box">
			<h2 class="listing-box-header">
				<%= link_to listing.name_with_verification_right, listing_path(listing.id), :class => "listing-box-header"%>
			</h2>
			<p class="italic"><%="#{listing.city}, #{listing.country}"%></p>
			<p class="italic"><%=listing.property_type%></p>
			<%=listing.amenity_string%>
			<hr />
			<p><%=listing.description%></p>
			<hr />

			<table class="centered" style="width: 100%; margin-bottom: 0em">
				<tr>
					<td><%="#{Listing::SYMBOLS[:rating_star]}#{listing.rating}"%></td>
					<td><%="#{Listing::SYMBOLS[:bed]}#{listing.n_bedrooms}"%></td>
					<td><%="#{Listing::SYMBOLS[:capacity]}#{listing.capacity}"%></td>
					<td><%="#{Listing::SYMBOLS[:bath]}#{listing.n_bathrooms}"%></td>
					<td><%="#{Listing::SYMBOLS[:price_icon]}#{listing.price}"%></td>
				</tr>
			</table>

		</div>
	<% end %>
<% else %>
	<h2 class="centered">No listings here!</h2>
<% end %>