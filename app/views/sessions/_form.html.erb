<div class="container" id="signin-form">
  <div class="row">
    <div class="col">
      
      <%= form_for :session, url: session_path do |form| %>
      <div class="form-group text-field">
        <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email Address" %>
      </div>

      <div class="form-group password-field">
        <%= form.password_field :password, :class => "form-control", :placeholder => "Password" %>
      </div>

      <div class="form-group submit-field">
        <%= form.submit "Login!", :class => "btn btn-primary w-100" %>
      </div>

      <hr />
      <div class="form-other-links">
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path %> <br />
        <% end %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2" %> <br />
        <%= link_to t(".forgot_password"), new_password_path %>
      </div>
    <% end %>

    </div>
  </div>
</div>