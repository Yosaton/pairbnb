<div class="container">
  <div class="row">
    <div class="col">
      
      <%= form_for :session, url: session_path do |form| %>
      <div class="input-group text-field mb-2">
        <div class="input-group-prepend" data-toggle="tooltip" title="Email Address" data-placement="left">
          <div class="input-group-text">
            <i class="fas fa-at"></i>
          </div>
        </div>
        <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email Address" %>
      </div>

      <div class="input-group password-field mb-2">
        <div class="input-group-prepend" data-toggle="tooltip" title="Password" data-placement="left">
          <div class="input-group-text">
            <i class="fas fa-key"></i>
          </div>
        </div>
        <%= form.password_field :password, :class => "form-control", :placeholder => "Password" %>
      </div>

      <div class="input-group submit-field mb-2">
        <%= form.submit "Login!", :class => "btn btn-primary w-100" %>
      </div>

      <hr />
      <div class="form-other-links">
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path, :class=> "btn btn-info w-100 mb-2"%>
        <% end %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", :class=> "btn btn-success w-100 mb-2"%>
        <%= link_to t(".forgot_password"), new_password_path, :class=> "btn btn-danger w-100 mb-2"%>
      </div>
    <% end %>

    </div>
  </div>
</div>