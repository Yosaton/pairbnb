<div class="container" style="height: 45em">
	<div class="row mt-5 px-1 py-2 h-100 border border-bottom-0">
		<div class="col" id="messages-container" style="overflow-y: scroll">
			<%= render @chatroom.messages.order(:created_at)%>
		</div>
	</div>

	<div class="row border border-top-0">
		<div class="col">
			<%=form_with model: @message, url: messages_path do |f|%>
				<%=f.hidden_field :chatroom_id, value: @chatroom.id%>
				<div class="input-group mb-2">
					<%=f.text_field :content, id: "message-input", class: "form-control"%>
					<div class="input-group-append">
						<%=f.submit ">", id: "message-submit", class: "btn btn-success"%>	
					</div>
				</div>

			<%end%>

		</div>
	</div>
</div>
<div id="chatroom_id" style="display:none"><%=@chatroom.id%></div>