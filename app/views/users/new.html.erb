<div class="container-fluid w-50 mt-4 form">
  <div class="row">
    <div class="col centered">

      <h2><%= t(".title") %></h2>
      <hr />

        <%= form_for :user, url: users_path do |f| %>
          <div class="form-group">
            <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, :class => "form-control", :placeholder => "Email Address" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
          </div>  

          <hr />

          <div id="upload-avatar-label">Upload an Avatar (optional)</div>

          <div class="form-group">
            <%= f.file_field :avatar_image, :class => "form-control" %>
          </div>
          

          <%= f.submit "Sign Up!", :class => "btn btn-primary w-100"%>
        <% end %>

      <hr />

      <div>
        <%= link_to t(".sign_in"), sign_in_path, :class => "form-other-links" %>
      </div>
    </div>
  </div>
</div>