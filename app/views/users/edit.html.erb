<% if (signed_in? && (current_user.id == @user.id)) %>
	<div class="container clearance-box centered w-25 p-0">
		<br />
		<h2 class="centered"><%=@user.full_name%></h2>
		<hr />

		<%= render 'edit_user_form', user: @user %>
		
	</div>
	<% else %>

	<h1 class="centered">You do not have permission to access this page</h1>

<% end %>