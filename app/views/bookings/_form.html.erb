<%= form_with(model: @booking, local: true) do |form| %>
  <% if @booking.errors.any? %>
    <div style="color: red">
      <p><%= pluralize(@booking.errors.count, "error") %>:</p>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="text" value="<%=@listing.id%>" name="listing_id" style="display:none"/>

  <div class="centered" style="padding: 2em; line-height: 1em;">
    From: <br />
    <%= form.date_select :start_date, start_year: Date.today.year%><br />
  </div>

  <div class="centered" style="padding: 2em; line-height: 1em;">
    To : <br />
    <%= form.date_select :end_date, start_year: Date.today.year%><br />  
  </div> <br />


  <div class="actions">
    <%= form.submit "Book #{@listing.name}!"%>
  </div>
<% end %>
