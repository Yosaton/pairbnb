<div class="centered" style="display: flex">

	<div class="clearance-box row-buddies" style="margin-right: 1em;">
		<h2>New Booking for <%=@listing.name%></h2>

		<%= render 'form', locals: {booking: @booking, listing: @listing} %>

		<p>at $<%=@listing.price%> per night.</p>

		<%= link_to 'Back', bookings_path %>
	</div>

	<div class="clearance-box row-buddies centered" style="margin-left: 1em;">
		<h2 style="text-decoration: underline">This listing has already been booked for the following dates:</h2>
		<table style="display: inline-block;">
				<tr>
					<td>
						<b>From</b>
					</td>

					<td>
						<b>To</b>
					</td>
				</tr>

			<% @listing.bookings.each do |booking| %>
				<tr>
					<td><%=booking.start_date.to_date%></td>
					<td><%=booking.end_date.to_date%></td>					
				</tr>	


			<% end %>

		</table>
	</div>

</div>