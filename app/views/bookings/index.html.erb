<div class="clearance-box centered">

  <%if (@bookings.length != 0) %>

    <%if (current_user.id == @bookings.first.user.id) %>

        <h2><%="Bookings for #{@user.full_name}"%></h2>
        <hr />

        <table>
        <%@bookings.order(:start_date).each do |booking|%>
          <tr>

            <td style="text-align: right">
              <a href="/bookings/<%=booking.id%>"> 
              <%="#{booking.listing.name}, from #{booking.start_date.to_date} to #{booking.end_date.to_date}"%>
              </a>
            </td>

            <td>
              <%=booking.payment_status%>  
            </td>

          </tr>
        <% end %>

      </table>
    
    <% else %>
      <h2>No bookings here!</h2>
    <% end %>

  <% else %>
    <h2>No bookings here!</h2>
  <% end %>

</div>