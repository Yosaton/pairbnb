<div class="container mt-4 w-50 centered form">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="form-group">
      <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email Address" %>
    </div>

    <div class="submit-field">
      <%= form.submit "Reset Password!", :class => "btn btn-danger w-100" %>
    </div>
  <% end %>
</div>